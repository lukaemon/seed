{
	"name": "seed",
	"context": "..",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--gpus",
		"all",
		"--ipc",
		"host",
		"--shm-size",
		"16G",
		"--ulimit=memlock=-1",
		"--ulimit=stack=67108864",
		"--env-file",
		".devcontainer/devcontainer.env"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"GitHub.copilot",
				"VisualStudioExptTeam.vscodeintellicode"
			]
		}
	},
	"mounts": [
		// "source=/home/lucas/nas,target=/workspaces/seed/nas,type=bind,consistency=cached",
		"source=/home/lucas/dev/cache/hf_dataset,target=/workspaces/seed/cache/hf_dataset,type=bind,consistency=cached",
		"source=/home/lucas/dev/cache/hf_model,target=/workspaces/seed/cache/hf_model,type=bind,consistency=cached"
	],
	"containerEnv": {
		"HF_DATASETS_CACHE": "/workspaces/seed/cache/hf_dataset",
		"TRANSFORMERS_CACHE": "/workspaces/seed/cache/hf_model",
		"PYTHONPATH": "/workspaces/seed"
	}
}